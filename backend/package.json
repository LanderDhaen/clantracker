{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "env-cmd nodemon",
    "start:dev": "env-cmd nodemon --exec ts-node src/index",
    "test": "env-cmd -f .env.test jest --runInBand",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage",
    "build": "tsc"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@joi/date": "^2.1.1",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "argon2": "^0.40.3",
    "config": "^3.3.12",
    "date-fns": "^3.6.0",
    "joi": "^17.13.3",
    "knex": "^3.1.0",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "kysely": "^0.27.4",
    "node-emoji": "^2.1.3",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.1"
  },
  "devDependencies": {
    "@types/config": "^3.3.4",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^22.2.0",
    "@types/pg": "^8.11.6",
    "env-cmd": "^10.1.0",
    "jest": "^29.7.0",
    "kysely-ctl": "^0.9.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src",
      "index.ts"
    ],
    "ext": "ts,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.ts"
  },
  "engines": {
    "npm": ">=9.8.0",
    "node": ">=20.6.0",
    "yarn": ">=1.22.0"
  }
}
